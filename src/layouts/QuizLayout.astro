---
import BaseLayout, { type Meta } from "./BaseLayout.astro";

// !! Change this to your page title and description
const defaultQuizMeta = {
  title: "Quiz",
  description: "Quiz Description",
};

type Props = {
  meta?: Meta;
};

const { meta = defaultQuizMeta } = Astro.props;
---

<BaseLayout {meta}>
  <body class="app-container overflow-hidden">
    <div class="scrollable-area lg:max-w-[1440px] mx-auto">
      <slot />
    </div>
    <style>
      .app-container {
        max-width: 100%;
        max-height: 100%;
        height: 100%;
        @apply bg-bg-primary text-text-primary;
      }
    </style>
  </body>
</BaseLayout>
