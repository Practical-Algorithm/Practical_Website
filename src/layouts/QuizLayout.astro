---
import BaseLayout from "./BaseLayout.astro";

// !! Change this to your page title and description
const title = "Quiz";
const description = "Quiz description";
---

<BaseLayout {title} {description}>
  <body class="app-container overflow-hidden">
    <div class="scrollable-area lg:max-w-[1440px] mx-auto">
      <slot />
    </div>
    <style>
      .app-container {
        max-width: 100%;
        max-height: 100%;
        height: 100%;
        @apply bg-bg-primary text-text-primary;
      }
    </style>
  </body>
</BaseLayout>
