---
import katex from "katex";

interface Props {
  formula: string;
  inline: boolean;
}

const { formula, inline = false } = Astro.props;
const html = katex.renderToString(formula, {
  throwOnError: false,
});
---

{
  inline ? (
    <span set:html={html} />
  ) : (
    <div class="text-center">
      <span set:html={html} />
    </div>
  )
}

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/katex/dist/katex.min.css"
/>
