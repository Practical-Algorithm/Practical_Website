        </div>
        <div class="tags">
          <PillBadge size="md" color="brand">Design</PillBadge>
          <PillBadge size="md" color="brand">Research</PillBadge>
          <PillBadge size="md" color="brand">Development</PillBadge>
        </div>
      </div>
    </article>
  </div>
  <Button size="link_lg" variant="link_color" className="mx-auto"
    >Read all blogs <Icon name="arrow-right" /></Button
  >
</section>

<style>
  .recent-blog {
    @apply flex flex-col gap-8 px-8;
  }

  .recent-blog header {
    @apply text-display-xs font-bold text-text-primary;
  }

  .recent-blog .contents {
    @apply grid gap-8;

    @apply grid-cols-1;
    @apply md:grid-cols-3 md:grid-rows-1;
    @apply lg:grid-cols-2 lg:grid-rows-2;
  }

  .recent-blog .contents article {
    @apply flex gap-5;
    @apply flex-col;
    @apply lg:flex-row;
    max-width: 592px;
  }
  .recent-blog .contents .most-recent-blog {
    @apply row-span-2 flex-col;
  }

  .contents .tags {
    @apply flex flex-wrap gap-2;
  }

  .article-desc {
    @apply text-text-tertiary line-clamp-2;
  }

  .most-recent-blog .article-desc {
    @apply line-clamp-3;
  }

  .meta {
    @apply text-text-brand-secondary font-semibold text-sm;
  }
  .title {
    @apply flex w-full justify-between items-center;
    @apply text-display-xs font-semibold text-text-primary;
  }

  .heading {
    @apply grid grid-cols-1 gap-2;
  }

  .post-content {
    @apply flex flex-col gap-6 grow basis-0;
  }

  .image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }
</style>
