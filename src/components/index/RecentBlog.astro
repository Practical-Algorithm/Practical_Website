---
import { Image } from "astro:assets";
import PillBadge from "@/components/PillBadge.astro";
import { Button } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
---

<section class="recent-blog">
  <header>Recent blog posts</header>
  <div class="contents">
    <!-- Recent post -->
    <article class="most-recent-blog">
      <div class="image">
        <Image
          src="/images/post-image1.png"
          height={2000}
          width={3200}
          alt="About me Image"
          class="rounded-2xl"
        />
      </div>

      <div class="post-content">
        <div class="heading">
          <div class="meta">Olivia Rhye • 20 Jan 2024</div>
          <div class="title">
            <h5>Migrating to Linear 101</h5>
