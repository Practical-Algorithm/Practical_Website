<style>
  .background-pattern {
    width: 1920px;
    height: 1440px;
    position: fixed;
    top: 0;
    left: 50%;
    translate: -50% 0;
    z-index: -1;
  }

  .pattern {
    width: 1920px;
    height: 1440px;
    mask-image: radial-gradient(
      circle at 960px 0px,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0) 95vh
    );
  }

  .vertical-lines {
    position: absolute;
    display: flex;
    gap: 96px;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .horizontal-lines {
    position: absolute;
    display: flex;
    gap: 96px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .v-line {
    width: 1px;
    height: 100%;
    @apply bg-border-primary;
  }

  .h-line {
    width: 100%;
    height: 1px;
    @apply bg-border-primary;
  }
</style>
