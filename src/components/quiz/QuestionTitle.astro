---
import type { CollectionEntry } from "astro:content";

interface Props {
  quizEntry: CollectionEntry<"quiz">;
  isAnswered: boolean;
}

const { quizEntry, isAnswered }: Props = Astro.props;
const { title } = quizEntry.data;
---

<section
  class:list={[
    {
      answered: isAnswered,
    },
  ]}
>
  <h1>{title}</h1>
</section>

<style>
  h1 {
    @apply flex justify-center items-center;
    @apply text-center;
    @apply max-w-3xl mx-auto;

    @apply font-bold;
    @apply text-xl md:text-display-sm;
  }

  .answered h1 {
    @apply hidden invisible;
    @apply lg:block lg:visible;
  }
</style>
