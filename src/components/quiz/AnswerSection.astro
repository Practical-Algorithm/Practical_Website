---
import type { CollectionEntry } from "astro:content";
import Explanation from "./Explanation.astro";
import ChoicesForm from "./ChoicesForm.tsx";

interface Props {
  slug: string;
  answerIndex?: number;
  quizEntry: CollectionEntry<"quiz">;
}

const { quizEntry, answerIndex, slug } = Astro.props;
const isAnswered = answerIndex !== undefined;
---

{
  isAnswered ? (
    <Explanation {answerIndex} quizEntry={quizEntry} />
  ) : (
    <ChoicesForm client:load slug={slug} quizEntry={quizEntry} />
  )
}
